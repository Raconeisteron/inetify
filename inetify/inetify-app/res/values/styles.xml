<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TableLayoutMain">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style> 

    <style name="TableRowMain1">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>   

    <style name="ImageViewIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">3dip</item>
    </style>

    <style name="TextViewName">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">bottom</item>
        <item name="android:padding">3dip</item>
        <item name="android:textSize">30sp</item>
    </style>
    
    <style name="TableRowMain2">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="ViewSpacer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30dip</item>
    </style>
    
    <style name="TableLayoutInfo">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="TableRowInfo">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="TextViewInfoProperty">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">3dip</item>
    </style>
    
    <style name="TextViewInfoValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">3dip</item>
    </style>
    
    <style name="ImageViewInfoNotification">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">3dip</item>
    </style>
    
</resources>