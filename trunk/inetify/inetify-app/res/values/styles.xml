<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="LinearLayoutMain">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TextViewName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/hello</item>
        <item name="android:drawableLeft">@drawable/icon</item>
        <item name="android:drawablePadding">10dip</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">3dip</item>
        <item name="android:textSize">30sp</item>
    </style>
    
    <style name="TextViewDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/description</item>
        <item name="android:padding">3dip</item>
    </style>
    
    <style name="ViewSpacer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">10dip</item>
    </style>
    
    <style name="TableLayoutInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shrinkColumns">1</item>
    </style>
    
    <style name="TextViewInfoProperty">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">3dip</item>
    </style>
    
    <style name="TextViewInfoValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">3dip</item>
    </style>
    
</resources>